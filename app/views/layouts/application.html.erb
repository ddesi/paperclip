<!DOCTYPE html>
<html>
<head>
  <title>Paperclip</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<nav>
        <% if user_signed_in? %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
            <%= link_to("HOME", "/", method: :get) %>
            <%= link_to("View Profiles", profiles_path, method: :get) %>
        <% else %>
            <%= link_to "Log In", user_session_path, method: :post %>
            <%= link_to "Sign Up", new_user_registration_path, method: :get %>
            <%= link_to("HOME", "/", method: :get) %>
        <% end %>
        </nav>
    </header>
    <% if flash[:notice] %>
        <%= flash[:notice] %>
    <% end %>
    
    <% if flash[:alert] %>
        <%= flash[:alert] %>
    <% end %>

<%= yield %>

</body>
</html>
